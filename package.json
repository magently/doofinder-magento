{
  "name": "doofinder-magento",
  "private": false,
  "devDependencies": {
    "eslint": "^3.1.1",
    "jscpd": "^0.6.3",
    "stylelint": "^7.0.3",
    "stylelint-checkstyle-formatter": "^0.1.0",
    "stylelint-config-standard": "github:stylelint/stylelint-config-standard",
    "stylelint-selector-bem-pattern": "^1.0.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=0.8.0"
  },
  "scripts": {
    "lint": "npm run eslint; npm run stylelint; npm run jscpd",
    "jscpd": "jscpd --path module/skin --output reports/jscpd.cpd.xml > /dev/null || true",
    "eslint": "eslint module/skin/**/*.js -f checkstyle -o reports/eslint.checkstyle.xml || true",
    "stylelint": "stylelint module/skin/**/*.css --custom-formatter node_modules/stylelint-checkstyle-formatter/index.js > reports/stylelint.checkstyle.xml || true"
  }
}
